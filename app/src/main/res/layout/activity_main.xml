<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="true"
    tools:context="com.example.android.helloandroid.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="@bool/button_parent_Right"
            android:layout_alignParentTop="@bool/button_parent_top"
            android:layout_marginRight="@dimen/buttondistance_from_rightmargin"
            android:contentDescription="@string/des_button"
            android:padding="@dimen/buttonpadding_size"
            android:text="@string/button"
            android:textAppearance="@style/CodeFont.16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                android:src="@drawable/udacityindex" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/textview_minutepadding"
                android:layout_marginTop="@dimen/firsttextviewdistance_fromTop"
                android:contentDescription="@string/address"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="@dimen/icon_textpadding"
                android:gravity="start"
                android:text="@string/address"
                android:textAppearance="@style/CodeFont" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:contentDescription="@string/telephone_no"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:drawablePadding="@dimen/icon_textpadding"
                android:gravity="start"
                android:padding="@dimen/textview_minutepadding"
                android:text="@string/phone_no"
                android:textAppearance="@style/CodeFont" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/webicon_leftmargin"
                android:autoLink="web"
                android:contentDescription="@string/web"
                android:drawableLeft="@drawable/ic_web_black_24dp"
                android:drawablePadding="@dimen/icon_textpadding"
                android:gravity="start"
                android:text="@string/web"
                android:textAppearance="@style/CodeFont" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
