<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/uimage_view"
        android:src="@drawable/udacityindex"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/utext_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Udacity"
        android:textColor="@android:color/black"
        android:layout_below="@id/uimage_view"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"/>


    <TextView
        android:id="@+id/address1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2465 Latham St"
        android:textColor="@android:color/black"
        android:layout_below="@id/utext_view"
        android:padding="2dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/address2_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mountain View, CA 94043"
        android:textColor="@android:color/black"
        android:layout_below="@id/address1_view"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"/>


    <TextView
        android:id="@+id/phoneno_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="650-555-5555"
        android:textColor="@android:color/black"
        android:layout_below="@id/address2_view"
        android:padding="2dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:autoLink="phone"
        />


    <TextView
        android:id="@+id/kashfia_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.udacity.com"
        android:textColor="@android:color/black"
        android:layout_below="@id/phoneno_view"
        android:padding="2dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:autoLink="web"/>


</LinearLayout>